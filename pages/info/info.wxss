/* pages/info/info.wxss */
page{
  margin-top: 0px;
}
.title{
  padding-top: 20px;
  text-align: center;
  font-size: 40rpx;
  font-weight: 400;
}

.desc {
  margin-top: 10rpx;
  color: #888;
  text-align: left;
  font-size: 28rpx;
  text-indent: 50rpx;
  padding: 0rpx 10rpx;
}
.bgimg{
  position: relative;
  /*background-image: url(/image/jixie.png);*/
  /*height: 240rpx;*/
}
.bgimg image{
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  z-index: -1;
}
.weui-cell{
	width: 100vh;
}
.weui-cell-box image{
	position: absolute;
	width: 40rpx;
	height: 40rpx;
	top: 0;
	right: 0;

}
.weui-cell-box {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.weui-cell-box:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  border-top: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}
.weui-cell-box:first-child:before {
  display: none;
}
.noticeTitle{
  width: 640rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.noticeAuthor{
  float: right;
  width: 200rpx;
  overflow:hidden;
  white-space:nowrap;
  text-align: right;
}