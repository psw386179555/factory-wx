<!--pages/member/relate/relate.wxml-->
<import src="/template/template.wxml"/>
<view class="page">
    <view class="weui-msg">
        <view class="weui-msg__icon-area">
            <image src="/image/phone.png"></image>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">0511-8878888</view>
            <view class="weui-msg__desc">上班时间:9:00-12:00   13:00-17:00</view>
        </view>
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap="callPhone">拨打电话</button>
                <button class="weui-btn" type="default" bindtap="inMessage">反馈留言</button>
            </view>
        </view>
        <view class="weui-msg__extra-area">
            <template is="footer"></template>
        </view>
    </view>
</view>
