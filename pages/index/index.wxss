/* pages/index/index.wxss */
page{
}
.swiper-container{
  position: relative;
}
swiper{
  height: 400rpx;
}
swiper-item{
  width: 100%
}

swiper-item image{
  width: 100%;
}
.swiper-container .dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}
.swiper-container .dots .dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all .6s;
}
.swiper-container .dots .dot.active{
  width: 24rpx;
  background: #f80;
}
.weui-cell__ft image{
	width: 150rpx;
	height: 150rpx;
	margin-right: 5px;
	vertical-align: middle;
}
.listTitle{
  width: 505rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.listTime{
	color: #8c8c8c;
	font-size: 16px;
	margin-top: 25rpx;
}
.noticeTitle{
  width: 640rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.btnGroup{
  display: flex;
  flex-direction: row;
  text-align: center;
  flex-wrap: wrap;
}
.btnGroup>view{
  flex: 1;
  padding:40rpx 0rpx;
  border-bottom: 2rpx solid #e7e7eb;
  position: relative;
}
.btnGroup>view:nth-child(1)
{
  border-right: 2rpx solid #e7e7eb;
}

.layui-icon-coin{
  color:#1296db;
  font-size: 48rpx!important;
}

.layui-icon-apply{
  color:#1AAD19;
  font-size: 48rpx!important;
}

.weui-cell{
	width: 100vh;
}
.weui-cell-box image{
	position: absolute;
	width: 40rpx;
	height: 40rpx;
	top: 0;
	right: 0;

}
.weui-cell-box {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.weui-cell-box:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  border-top: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}
.weui-cell-box:first-child:before {
  display: none;
}
.weui-cell__tips{
  padding-top: 20rpx;
}
.noticeTitle{
  width: 640rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.noticeAuthor{
  float: right;
  width: 200rpx;
  overflow:hidden;
  white-space:nowrap;
  text-align: right;
}